{
  "name": "groq-mcp-test",
  "version": "0.1.0",
  "description": "A Model Context Protocol server with Nostr DVM support",
  "private": true,
  "type": "module",
  "bin": {
    "groq-mcp-test": "./build/index.js",
    "generate-nostr-key": "./build/utils/generate-key.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755'); require('fs').chmodSync('build/utils/generate-key.js', '755');\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "generate-key": "node build/utils/generate-key.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "@noble/curves": "^1.3.0",
    "@noble/hashes": "^1.3.3",
    "groq-sdk": "^0.9.0",
    "nostr-tools": "^2.1.5",
    "websocket-polyfill": "^0.0.3",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/ws": "^8.5.10",
    "typescript": "^5.3.3"
  }
}